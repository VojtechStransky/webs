{varType string $lang}
{varType App\Models\GamePhaseCalculator $gamePhaseCalculator}

{*{block title}*}
{*    {switch $lang}*}
{*        {case 'cs'} O soutěži*}
{*        {default} About*}
{*    {/switch}*}
